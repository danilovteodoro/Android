<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center">
    <TextView
        android:id="@+id/iconStatus"
        android:layout_width="@dimen/dimenStatusPedido"
        android:layout_height="@dimen/dimenStatusPedido"
        android:background="@drawable/shape_gray"
        android:gravity="center"
        style="@style/texto"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/t16"
        android:layout_marginRight="5dp"

        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nPedidoRcaErp"
                android:textSize="@dimen/t12"
                style="@style/texto"
                android:textStyle="bold"
                android:textColor="@color/lightGray"/>
            <TextView
                android:id="@+id/txtPedido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/t10"
                style="@style/texto"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtHoraPedido"
                style="@style/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:38"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/t12"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_cliente"
                android:textSize="@dimen/t12"
                style="@style/texto"
                android:textStyle="bold"
                android:textColor="@color/lightGray"/>
            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/t12"
                style="@style/texto"
                android:textColor="#000000"/>

<!--            <TextView-->
<!--                android:id="@+id/txtLegendas"-->
<!--                style="@style/texto"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->

<!--                android:textColor="@color/lightGray"-->
<!--                android:textSize="@dimen/t10"-->
<!--                android:textStyle="bold"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/legendaCorte"
                    android:layout_width="@dimen/dimenPedidoLegenda"
                    android:layout_height="@dimen/dimenPedidoLegenda"
                    android:src="@drawable/ic_maxima_legenda_corte"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/legendaFalta"
                    android:layout_width="@dimen/dimenPedidoLegenda"
                    android:layout_height="@dimen/dimenPedidoLegenda"
                    android:src="@drawable/ic_maxima_legenda_falta"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/legendaCancelado"
                    android:layout_width="@dimen/dimenPedidoLegenda"
                    android:layout_height="@dimen/dimenPedidoLegenda"
                    android:src="@drawable/ic_maxima_legenda_cancelamento"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/legendaDevolucao"
                    android:layout_width="@dimen/dimenPedidoLegenda"
                    android:layout_height="@dimen/dimenPedidoLegenda"
                    android:src="@drawable/ic_maxima_legenda_devolucao"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/legendaTelemarketing"
                    android:layout_width="@dimen/dimenPedidoLegenda"
                    android:layout_height="@dimen/dimenPedidoLegenda"
                    android:src="@drawable/ic_maxima_legenda_telemarketing"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:id="@+id/txtStatus"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/t12"
                style="@style/texto"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/lblCritica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/texto"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/t12"
                android:text="@string/str_critica"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/iconCritica"
                android:layout_width="@dimen/dimenPedidoLegenda"
                android:layout_height="@dimen/dimenPedidoLegenda"
               />
            <TextView
                android:id="@+id/txtValor"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/t12"
                style="@style/texto"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="R$617,40"
                android:gravity="center|right"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>