<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.noTitleFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="texto">
        <item name="fontFamily">@font/santral_medium</item>
    </style>
    <style name="textoMenuPrincipal" parent="texto">
        <item name="android:textColor">#232323</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dados Cliente -->
    <style name="texto.DadosCliente">
        <item name="fontFamily">@font/santral_bold</item>
        <item name="android:textColor">#000000</item>

    </style>
    <style name="texto.DadosCliente.title" parent="texto.DadosCliente">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="texto.DadosCliente.Labels" parent="texto.DadosCliente">
        <item name="android:textColor">#95989A</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="texto.DadosCliente.razaoSocial" parent="texto.DadosCliente">
        <item name="android:textColor">#606060</item>
    </style>
    <style name="texto.DadosCliente.telefone" parent="texto.DadosCliente">
        <item name="android:textColor">#186096</item>
    </style>
    <style name="texto.DadosCliente.email" parent="texto.DadosCliente">
        <item name="android:textColor">#C1392B</item>
    </style>
    <style name="texto.DadosCliente.status" parent="texto.DadosCliente">
        <item name="android:textColor">#638735</item>
    </style>

    <!-- Bottom navigation Styles -->
    <style name="activeNavigation">
        <item name="android:textColor">@color/activeBottomNavigation</item>
    </style>
    <style name="inactiveNavigation">
        <item name="android:textColor">@color/inactiveBottomNavigation</item>
    </style>

    <style name="texto.legenda" parent="texto">
        <item name="android:padding">5dp</item>

        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
